{
    "name": "@threequackinn/landing",
    "version": "1.9.1",
    "private": true,
    "scripts": {
        "build": "next build && next export",
        "dev": "next dev",
        "start": "next start"
    },
    "dependencies": {
        "@threequackinn/client-common": "*",
        "@threequackinn/conjure-animals": "*",
        "autoprefixer": "10.2.3",
        "next": "10.0.4",
        "postcss": "8.2.2",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat"
    },
    "devDependencies": {
        "@axe-core/react": "4.1.1",
        "@babel/preset-typescript": "7.13.0",
        "@types/react": "17.0.2",
        "@types/react-dom": "17.0.1",
        "next-compose-plugins": "2.2.1",
        "next-plugin-custom-babel-config": "1.0.4",
        "next-transpile-modules": "6.3.0",
        "postcss-preset-env": "6.7.0",
        "sass": "1.32.8"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    },
    "release": {
        "branches": [
            "main"
        ],
        "verifyConditions": [
            "@semantic-release/github"
        ],
        "prepare": [
            "@semantic-release/changelog",
            "@semantic-release/npm",
            {
                "path": "@semantic-release/git",
                "message": "chore(release): @threequackinn/landing v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        "publish": [
            "@semantic-release/github"
        ],
        "success": []
    }
}
