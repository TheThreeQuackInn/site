{
    "name": "@threequackinn/monorepo",
    "version": "1.0.0",
    "description": "Houses all the files related to thethreequackinn.com website",
    "main": "index.js",
    "repository": "git@github.com:TheThreeQuackInn/site.git",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/client/*",
            "packages/server"
        ]
    },
    "scripts": {
        "semantic-release": "lerna exec --concurrency 1 \"yarn semantic-release -e semantic-release-monorepo\"",
        "start:server": "cd packages/server && docker-compose up",
        "start:client": "yarn workspace @threequackinn/landing dev",
        "test": "jest",
        "test:client": "jest packages/client",
        "test:server": "jest packages/server",
        "build:client": "yarn workspace @threequackinn/landing build"
    },
    "devDependencies": {
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/exec": "5.0.0",
        "@semantic-release/git": "9.0.0",
        "@types/jest": "26.0.20",
        "@typescript-eslint/eslint-plugin": "4.14.1",
        "@typescript-eslint/parser": "4.14.1",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "7.19.0",
        "eslint-config-prettier": "7.2.0",
        "eslint-plugin-prettier": "3.3.1",
        "husky": "4.3.6",
        "jest": "26.6.3",
        "lerna": "3.22.1",
        "lint-staged": "10.5.4",
        "prettier": "2.2.1",
        "semantic-release": "17.3.7",
        "semantic-release-monorepo": "7.0.3",
        "ts-jest": "26.5.0",
        "typescript": "4.1.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "branches": [
            "main"
        ],
        "verifyConditions": [
            "@semantic-release/github"
        ],
        "prepare": [
            "@semantic-release/changelog",
            "@semantic-release/npm",
            {
                "path": "@semantic-release/git",
                "message": "chore(release): monorepo v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        "publish": [
            "@semantic-release/github"
        ],
        "success": []
    },
    "resolutions": {
        "mem": "8.0.0",
        "node-fetch": "2.6.1",
        "object-path": "0.11.5",
        "y18n": "5.0.5",
        "yargs-parser": "20.2.4"
    }
}
